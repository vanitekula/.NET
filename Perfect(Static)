using System;
using System.Collections.Generic;
using System.Linq;
using System.Text;
using System.Threading.Tasks;

namespace ConsoleApp7.Properties
{
    class Prime
    {
        static void Main(string[] args)
        {
            Console.WriteLine(IsPrime(7));
        }
        private static bool IsPrime(int a)
        {
            int count = 0;
            for (int i = 1; i < a; i++)
            {
                if (a % i == 0)
                {
                    count++;
                }
            }
            return count == 1;
        }
    }
}
